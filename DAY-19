view problem:
#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int minSum = 1000000;
    int a, b;

    // Check all pairs
    for(int i = 0; i < n - 1; i++) {
        for(int j = i + 1; j < n; j++) {
            int sum = arr[i] + arr[j];

            if(abs(sum) < abs(minSum)) {
                minSum = sum;
                a = arr[i];
                b = arr[j];
            }
        }
    }

    printf("%d %d", a, b);

    return 0;
}
solve problem:
int maxSubarraySumCircular(int* nums, int n) {
    int totalSum = 0;
    
    int currMax = nums[0], maxSum = nums[0];
    int currMin = nums[0], minSum = nums[0];

    for (int i = 0; i < n; i++) {
        totalSum += nums[i];

        currMax = (i == 0) ? nums[i] : (currMax + nums[i] > nums[i] ? currMax + nums[i] : nums[i]);
        maxSum = (currMax > maxSum) ? currMax : maxSum;

        currMin = (i == 0) ? nums[i] : (currMin + nums[i] < nums[i] ? currMin + nums[i] : nums[i]);
        minSum = (currMin < minSum) ? currMin : minSum;
    }

    // If all numbers are negative
    if (maxSum < 0)
        return maxSum;

    return (totalSum - minSum > maxSum) ? (totalSum - minSum) : maxSum;
}

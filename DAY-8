view problem:
#include <stdio.h>

long long power(int a, int b) {
    if (b == 0)
        return 1;   // base case
    return a * power(a, b - 1);
}

int main() {
    int a, b;
    scanf("%d %d", &a, &b);

    printf("%lld", power(a, b));
    return 0;
}
solve problem:
#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    if (n > 0 && (n & (n - 1)) == 0)
        printf("true");
    else
        printf("false");

    return 0;
}

#include <stdio.h>

int main() {
    int n, pos;

    // Read size of array
    scanf("%d", &n);

    int arr[n];

    // Read array elements
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Read position to delete (1-based)
    scanf("%d", &pos);

    // Convert to 0-based index
    pos = pos - 1;

    // Shift elements to the left
    for (int i = pos; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }

    // Print updated array (n-1 elements)
    for (int i = 0; i < n - 1; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}

    int n = sizeof(prices) / sizeof(prices[0]);

    printf("Maximum Profit = %d", maxProfit(prices, n));
    return 0;
}

view problem:
#include <stdio.h>

int main() {
    int m, n;
    scanf("%d %d", &m, &n);

    int A[m][n];

    // Input matrix
    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++) {
            scanf("%d", &A[i][j]);
        }
    }

    int sum = 0;

    // Calculate primary diagonal sum
    for(int i = 0; i < m && i < n; i++) {
        sum += A[i][i];
    }

    printf("%d", sum);

    return 0;
}
solve problem:
#include <stdio.h>

int main() {
    int m, n;
    scanf("%d %d", &m, &n);

    int A[m][n];

    for(int i = 0; i < m; i++)
        for(int j = 0; j < n; j++)
            scanf("%d", &A[i][j]);

    int firstRowZero = 0, firstColZero = 0;

    // Check first row
    for(int j = 0; j < n; j++)
        if(A[0][j] == 0) firstRowZero = 1;

    // Check first column
    for(int i = 0; i < m; i++)
        if(A[i][0] == 0) firstColZero = 1;

    // Mark rows & columns
    for(int i = 1; i < m; i++) {
        for(int j = 1; j < n; j++) {
            if(A[i][j] == 0) {
                A[i][0] = 0;
                A[0][j] = 0;
            }
        }
    }

    // Set zeroes based on marks
    for(int i = 1; i < m; i++) {
        for(int j = 1; j < n; j++) {
            if(A[i][0] == 0 || A[0][j] == 0)
                A[i][j] = 0;
        }
    }

    // Handle first row
    if(firstRowZero)
        for(int j = 0; j < n; j++)
            A[0][j] = 0;

    // Handle first column
    if(firstColZero)
        for(int i = 0; i < m; i++)
            A[i][0] = 0;

    // Print result
    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++)
            printf("%d ", A[i][j]);
        printf("\n");
    }

    return 0;
}
